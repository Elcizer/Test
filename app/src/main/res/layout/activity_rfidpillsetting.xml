<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RfidpillsettingActivity">

    <android.widget.Button
        android:id="@+id/btn_pillnumber_change"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_round_edge"
        android:fontFamily="@font/pretendard_bold"
        android:text="적용"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_birthday" />

    <TextView
        android:id="@+id/tv_rfidnum_pill"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="RFID : "
        android:textColor="#000000"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_p1_setting"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:hint="첫번째 알약 개수"
        android:inputType="numberSigned"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_rfidnum_pill" />

    <EditText
        android:id="@+id/et_p3_setting"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:hint="세번째 알약 개수"
        android:inputType="numberSigned"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/et_p2_setting" />

    <EditText
        android:id="@+id/et_p2_setting"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:hint="두번째 알약 개수"
        android:inputType="numberSigned"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/et_p1_setting" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="Pill 1:"
        android:textColor="#673AB7"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rfidnum_pill" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="Pill 3:"
        android:textColor="#673AB7"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="Pill 2:"
        android:textColor="#673AB7"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>